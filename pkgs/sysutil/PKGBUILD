pkgname=sysutil
pkgver="0.1.0"
pkgrel="1"
pkgdesc="Get system statistics easily!"
arch=('any')
provides=("sysutil")
conflicts=("sysutil")
depends=(
	"python"
	"python-psutil"
)
license=('MIT')
url="https://github.com/angeldollface/sysutil"
source=("https://github.com/angeldollface/$pkgname/archive/refs/tags/v.$pkgver.zip")
md5sums=("1b44a22d58c5956f0e45f34044188028")

build() {
	cd "$srcdir/$pkgname-v.$pkgver"
	mv src/sysutil.py src/sysutil
    mv src/sysutil ./sysutil
}

package() {
	cd "$pkgname-v.$pkgver"
	install -Dm755 sysutil -t "$pkgdir/usr/bin"
}
